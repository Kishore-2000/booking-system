<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin -  Manage Users</title>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include("../navbar") %>
  <div  style="padding: 10px;text-align: center;">
     <h2>Users Count : <%= users.length %></h2>
     <% let count=0 ; %>
   <%  for(let x=0;x<users.length;x++){ %>
       <%  if(users[x].role==="admin"){ %>
           <%  count = count + 1 ; %>
      <%   } %>
  <%   } %>
     <div>
        <h3>Admin Users : <%= count %> </h3>
     </div>
    <% if(messages.info){ %>
      <p style="color: orangered;font-weight: bold;"><%= messages.info %></p>
   <%  } %>
  </div>
    <table>
        <thead>
    <tr>
		<th>Name</th>
		<th>Mail</th>
		<th>Role</th>
        <th>Modify Role</th>
	</tr>
	</thead>
	<tbody>
<%	for(let i=0;i<users.length;i++){ %>
    <tr>
		<td><%= users[i].customerName%></td>
		<td> <%= users[i].gmail %></td>
		<td> <%=users[i].role %> </td>
        <td>  <%   if(users[i].role != "admin"){ %>
           <form class="make-admin" action="/admin/make-admin" method="post">
             <input name="userId" style="display: none;" value="<%=users[i]._id%>">
            <button class="mx-2 btn btn-md btn-primary" type="submit" > Make Admin</button>
           </form>
         <%  }else{ %>
             <form class="remove-admin" action="/admin/remove-admin" method="post">
              <input name="userId" style="display: none;" value="<%=users[i]._id%>">
              <button class="mx-2 btn btn-md btn-primary" type="submit" > Remove Admin</button>
            </form>
      <%   } %></td>
	</tr>
 <%   } %>

	</tbody>
</table>
    <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
    crossorigin="anonymous"
  ></script> 
  <script src="/js/external-js/jquery.min.js"></script>
  <script src="/js/admin-1.js"></script> 
</body>
</html>