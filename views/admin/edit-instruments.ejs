<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Edit Instruments</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include("../navbar") %>

    <div id="goBackDiv">
      <button id="goBackButton" class="btn btn-lg">Go Back</button>
    </div>

    <div class="editInstrumentDiv"><h1><%=editableItems[0].category %></h1></div>
    <div class="my-2 addInstrument"><button data-addInstrument="<%=JSON.stringify(editableItems[0]) %>" class="btn btn-lg btn-success">Add Instrument</button></div>
    <div class="row">
      <% for(let i=0;i<editableItems.length;i++){ %>
        <div class="col-lg-4">

        <div class="card" style="width: 18rem;">
            <img src="<%=editableItems[i].image %>" class="card-img-top" alt="..." load="lazy">
            <div class="card-body ">
              <h5 class="card-title d-flex justify-content-center my-2"><%= editableItems[i].instrumentName %></h5>
              <div class="d-flex justify-content-center">
                <a href="#" data-update="<%=JSON.stringify(editableItems[i]) %>" class="btn btn-primary mx-2 ">
                    <span><img src="https://img.icons8.com/ios-glyphs/30/ffffff/approve-and-update--v1.png"/></span>
                    Update</a>
                <button  data-delete="<%=JSON.stringify(editableItems[i]) %>" class="btn btn-danger mx-2 deleteData">
                    <span><img src="https://img.icons8.com/material-sharp/24/ffffff/delete-trash.png"/></span>
                    Delete</button>
              </div>
              <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
            </div>
          </div>
        </div>
   <%   } %>
    
    </div>

    <!-- js -->
    <script src="/js/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script src="/js/admin.js"></script>
  </body>
</html>
